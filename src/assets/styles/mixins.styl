ellipsis()
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis
contentWrapper()
  width: 100%
  min-height: 100%
  display: flex
  flex-direction: column
  justify-content: flex-start
  align-items: center
  background-color: #fff
  padding: 15px
  border-radius: 5px
.color-red
  color red
.color-blue
  color blue
.sky-blue
  color #389FFF
.color-green
  color green
.color-cyan
  color #1BD7D9
.color-self-blue
  color #1e9cd7
.color-self-green
  color #00C5B4
.color-purple
  color #7D4FEF
.color-self-orange
  color #F58E79
scrollbar()
  &::-webkit-scrollbar
    width 4px
  &::-webkit-scrollbar-thumb
    background rgb(26, 200, 206)
    border-radius 4px